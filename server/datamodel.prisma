type gameRole {
  id: ID! @unique
  playerId: User!
  role: RoleType!
  gameId: Game!

}
type Game {
  id: ID! @unique
  modules: Int
  modulesFailed: Int
  startTime: Int
  endTime: Int
  strikesAllowed: Int!
  gameStatus: Status!
  needyModules: Boolean @default(value: "false")
}

enum Status {
  INPROGRESS
  COMPLETED
  FAILED
}
enum RoleType {
  DEFUSER
  EXPERT
}
