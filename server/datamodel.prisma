type gameRole {
  id: ID! @unique
  playerId: User!
  role: RoleType!
  gameId: Game!

}
type Game {
  id: ID! @unique
  modules: Int! @default(value: 5)
  modulesFailed: Int! @default(value: 0)
  startTime: Int! @default(value: 300000)
  endTime: Int
  strikesAllowed: Int! @default(value: 3)
  gameStatus: Status
  needyModules: Boolean @default(value: "false")
}

enum Status {
  INPROGRESS
  COMPLETED
  FAILED
}
enum RoleType {
  DEFUSER
  EXPERT
}
